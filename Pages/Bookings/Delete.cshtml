@page
@model ResourceBookingSystem.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete Booking";
}

<h1 class="mb-4 text-danger">Delete Booking</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this booking?</strong><br />
    This action cannot be undone.
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Booking Information</h4>
        <hr />

        <dl class="row mt-3">
            <dt class="col-sm-3">Resource</dt>
            <dd class="col-sm-9">@Model.Booking.Resource?.Name</dd>

            <dt class="col-sm-3">Start Time</dt>
            <dd class="col-sm-9">
                @Model.Booking.StartTime.ToString("yyyy-MM-dd HH:mm")
            </dd>

            <dt class="col-sm-3">End Time</dt>
            <dd class="col-sm-9">
                @Model.Booking.EndTime.ToString("yyyy-MM-dd HH:mm")
            </dd>

            <dt class="col-sm-3">Booked By</dt>
            <dd class="col-sm-9">@Model.Booking.BookedBy</dd>

            <dt class="col-sm-3">Purpose</dt>
            <dd class="col-sm-9">@Model.Booking.Purpose</dd>
        </dl>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Booking.Id" />

    <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
