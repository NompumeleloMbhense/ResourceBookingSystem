@page
@model ResourceBookingSystem.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Bookings";
}

<h1 class="mb-4">All Bookings</h1>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary px-4">Add New Booking</a>
</div>

<form method="get" class="row mb-4">

    <div class="col-md-4 mb-2">
        <label class="form-label fw-semibold">Search by Name</label>
        <input name="SearchName" value="@Model.SearchName" class="form-control" placeholder="e.g., Jane Doe" />
    </div>

    <div class="col-md-3 mb-2">
        <label class="form-label fw-semibold">Filter by Date</label>
        <input type="date" name="SearchDate" value="@(Model.SearchDate?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>

    <div class="col-md-3 d-flex align-items-end mb-2">
        <button type="submit" class="btn btn-primary px-4 me-2">Search</button>

        <a asp-page="./Index" class="btn btn-secondary">Reset</a>
    </div>

</form>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Resource</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Booked By</th>
            <th>Purpose</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Booking)
        {
            <tr>
                <td>@item.Resource?.Name</td>
                <td>@item.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.BookedBy</td>
                <td>@item.Purpose</td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
