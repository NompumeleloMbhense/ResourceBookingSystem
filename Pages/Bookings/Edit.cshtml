@page
@model ResourceBookingSystem.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit Booking";
}

<h1 class="mb-4">Edit Booking</h1>

<div class="row">
    <div class="col-md-5">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Booking.Id" />

            <!-- Resource Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="Booking.ResourceId" class="control-label"></label>
                <select asp-for="Booking.ResourceId"
                        class="form-control"
                        asp-items="ViewBag.ResourceId">
                    <option value="">-- Select Resource --</option>
                </select>
                <span asp-validation-for="Booking.ResourceId" class="text-danger"></span>
            </div>

            <!-- Start Time -->
            <div class="form-group mb-3">
                <label asp-for="Booking.StartTime" class="control-label"></label>
                <input asp-for="Booking.StartTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="Booking.StartTime" class="text-danger"></span>
            </div>

            <!-- End Time -->
            <div class="form-group mb-3">
                <label asp-for="Booking.EndTime" class="control-label"></label>
                <input asp-for="Booking.EndTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="Booking.EndTime" class="text-danger"></span>
            </div>

            <!-- Booked By -->
            <div class="form-group mb-3">
                <label asp-for="Booking.BookedBy" class="control-label"></label>
                <input asp-for="Booking.BookedBy" class="form-control" />
                <span asp-validation-for="Booking.BookedBy" class="text-danger"></span>
            </div>

            <!-- Purpose -->
            <div class="form-group mb-3">
                <label asp-for="Booking.Purpose" class="control-label"></label>
                <input asp-for="Booking.Purpose" class="form-control" />
                <span asp-validation-for="Booking.Purpose" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary px-4">Save Changes</button>
            </div>

        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
