@page
@model ResourceBookingSystem.Pages.Resources.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Resource Details</h1>

<!-- RESOURCE DETAILS CARD -->
<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Resource Information</h4>
        <hr />
        <dl class="row mt-3">

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Resource.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Resource.Description</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Resource.Location</dd>

            <dt class="col-sm-3">Capacity</dt>
            <dd class="col-sm-9">@Model.Resource.Capacity</dd>

            <dt class="col-sm-3">Is Available?</dt>
            <dd class="col-sm-9">@Model.Resource.IsAvailable</dd>

        </dl>
    </div>
</div>

<!-- BOOKINGS SECTION -->
<h4 class="mt-4 mb-3">Bookings for this Resource</h4>

@if (Model.Resource.Bookings == null || !Model.Resource.Bookings.Any())
{
    <p><em>No bookings for this resource.</em></p>
}
else
{
    <table class="table table-striped table-bordered align-middle mb-4">
        <thead class="table-light">
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Booked By</th>
                <th>Purpose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Resource.Bookings)
            {
                <tr>
                    <td>@booking.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.BookedBy</td>
                    <td>@booking.Purpose</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- ACTION BUTTONS -->
<div class="mt-4">
    <a asp-page="./Edit" asp-route-id="@Model.Resource.Id" class="btn btn-primary me-2">Edit Resource</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
