@page
@model ResourceBookingSystem.Pages.Resources.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Resource</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.IsAvailable)
        </dd>
    </dl>
</div>

<h4>Bookings for this Resource</h4>
<hr />

@if (Model.Resource.Bookings == null || !Model.Resource.Bookings.Any())
{
    <p><em>No bookings for this resource.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Booked By</th>
                <th>Purpose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Resource.Bookings)
            {
                <tr>
                    <td>@booking.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.BookedBy</td>
                    <td>@booking.Purpose</td>
                </tr>
            }
        </tbody>
    </table>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Resource.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
