@page
@model ResourceBookingSystem.Pages.Resources.DeleteModel

@{
    ViewData["Title"] = "Delete Resource";
}

<h1 class="mb-4 text-danger">Delete Resource</h1>

<div class="alert alert-warning">
    <strong>Are you sure?</strong> You are about to permanently delete this resource.
    <br />
    This action cannot be undone.
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3">Resource Details</h4>

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Resource.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Resource.Description</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Resource.Location</dd>

            <dt class="col-sm-3">Capacity</dt>
            <dd class="col-sm-9">@Model.Resource.Capacity</dd>

            <dt class="col-sm-3">Available?</dt>
            <dd class="col-sm-9">
                @if (Model.Resource.IsAvailable)
                {
                    <span class="badge bg-success">Yes</span>
                }
                else
                {
                    <span class="badge bg-danger">No</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form method="post" class="d-flex align-items-center">
    <input type="hidden" asp-for="Resource.Id" />

    <button type="submit" class="btn btn-danger me-3 px-4">
        Delete Resource
    </button>

    <a asp-page="./Index" class="btn btn-secondary px-4">
        Cancel
    </a>
</form>
