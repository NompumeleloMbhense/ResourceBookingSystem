@page
@model ResourceBookingSystem.Pages.Resources.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Add Resource</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Resource.Name" class="control-label"></label>
                <input asp-for="Resource.Name" class="form-control" />
                <span asp-validation-for="Resource.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Resource.Description" class="control-label"></label>
                <input asp-for="Resource.Description" class="form-control" />
                <span asp-validation-for="Resource.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Resource.Location" class="control-label"></label>
                <input asp-for="Resource.Location" class="form-control" />
                <span asp-validation-for="Resource.Location" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Resource.Capacity" class="control-label"></label>
                <input asp-for="Resource.Capacity" class="form-control" />
                <span asp-validation-for="Resource.Capacity" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Resource.IsAvailable" />
                <label class="form-check-label" asp-for="Resource.IsAvailable">
                    @Html.DisplayNameFor(model => model.Resource.IsAvailable)
                </label>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary px-4">Create Resource</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
