@page
@model ResourceBookingSystem.Pages.Resources.IndexModel

@{
    ViewData["Title"] = "Resources";
}

<h1 class="mb-4">All Resources</h1>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary px-4">Add New Resource</a>
</div>


<form method="get" class="mb-3 d-flex">
    <input type="text"
           name="SearchTerm"
           value="@Model.SearchTerm"
           class="form-control me-2"
           placeholder="Search resources..." />

    <button class="btn btn-primary">Search</button>
</form>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Available?</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Resource)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
