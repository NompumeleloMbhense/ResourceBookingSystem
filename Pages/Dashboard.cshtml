@page
@model ResourceBookingSystem.Pages.DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Dashboard</h1>

<div class="mb-4">
    <a class="btn btn-primary me-2" asp-page="/Resources/Index">View Resources</a>
    <a class="btn btn-success me-2" asp-page="/Bookings/Create">Add Booking</a>
    <a class="btn btn-info text-white" asp-page="/Bookings/Index">View All Bookings</a>
</div>

<!-- Today's Bookings -->
<h3 class="mt-4">Today's Bookings</h3>
<hr />

@if (!Model.TodaysBookings.Any())
{
    <p><em>No bookings for today.</em></p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Resource</th>
                <th>Start</th>
                <th>End</th>
                <th>Booked By</th>
                <th>Purpose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.TodaysBookings)
            {
                <tr>
                    <td>@b.Resource?.Name</td>
                    <td>@b.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@b.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@b.BookedBy</td>
                    <td>@b.Purpose</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Upcoming Bookings -->
<h3 class="mt-5">Upcoming Bookings</h3>
<hr />

@if (!Model.UpcomingBookings.Any())
{
    <p><em>No upcoming bookings.</em></p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Resource</th>
                <th>Start</th>
                <th>Booked By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.UpcomingBookings)
            {
                <tr>
                    <td>@b.Resource?.Name</td>
                    <td>@b.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@b.BookedBy</td>
                </tr>
            }
        </tbody>
    </table>
}
